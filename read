var widgetname = "src";

gulp.task('htmlcheck', function() {
    return gulp.src(widgetname + '/*.html')
        .pipe(htmllint(	{
			"reporter": path.join(__dirname, './reports/aa.html'),
			"filename": widgetname
		}, htmllint.formatHtml));
});



